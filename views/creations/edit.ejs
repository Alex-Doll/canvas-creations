<% include ../partials/header %>

<div class="ui container">
    <h1 class="ui center aligned header">Add A New Creation!</h1>
    <form class="ui form" action="/creations/<%= creation._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="creation[title]" value="<%= creation.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="creation[image_url]" value="<%= creation.image_url %>">
        </div>
        <div class="field">
            <label>Website URL</label>
            <input type="text" name="creation[website_url]" value="<%= creation.website_url %>">
        </div>
        <input class="ui violet button" type="submit" value="Submit Creation">
    </form>
</div>

<% include ../partials/footer %>