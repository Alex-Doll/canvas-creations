<% include ../partials/header %>

<div class="ui container">
    <h1 class="ui huge header"><%= creation.title %></h1>
    <img class="ui large rounded image" src="<%= creation.image_url %>">
    <a href="<%= creation.website_url %>" target="_blank">Visit Website!</a>
    
    <a class="ui violet button" href="/creations/<%= creation._id %>/comments/new">Add Comment</a>
    
    <% creation.comments.forEach(function(comment) { %>
        <p><%= comment.author %></p>
        <p><%= comment.text %></p>
    <% }) %>
</div>

<% include ../partials/footer %>